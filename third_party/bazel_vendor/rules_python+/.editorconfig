# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# Line width
[*]
max_line_length = 100

# 4 space indentation
[*.{py,bzl}]
indent_style = space
indent_size = 4

# different overrides for git commit messages
[.git/COMMIT_EDITMSG]
max_line_length = 72
